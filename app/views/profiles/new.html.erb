<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">Create Your Profile</h1>
    <p class="text-center">ArtParty is about connecting people who need something awesome
      with creatives they can trust. Fill out your profile to get started!</p>
    <div class="well">
      <%= form_for @profile, url: user_profile_path do |f| %>
        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control' %>
        <div class="form-group">
          <%= f.label :job_title %>
          <%= f.select :job_title, ['Graphic Designer', 'Interior Designer', 'Photographer', 'Stylist', 'Clothing Designer', 'Visual Artist', 'Developer'], {}, class: 'form-control' %>
        </div>
        </div>
        <div class="form-group">
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :contact_email %>
          <%= f.text_field :contact_email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Profile", class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
