<div class="jumbotron text-center">
  <h1>ArtParty</h1>
  <h3>Let's get our friends in one room to share what we can do!</h3>
</div>
<div class="row">
  <% if user_signed_in? %>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Your Profile</h2>
        <% if current_user.profile %>
          <%= link_to "Edit your profile", edit_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
          <%= link_to "View your profile", user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
        <% else %>
          <%= link_to "Create your profile!", new_user_profile_path(current_user) if current_user %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">The Artists</h2>
        <p class="text-center">Check out the community to meet people you can trust to get the job done.</p>
        <%= link_to "Visit the community", users_path, class: 'btn btn-default btn-lg btn-block' %>
      </div>
    </div>
  <% else %>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Basic Membership</h2>
        <h4>Free and Basic Access to the ArtParty Community</h4>
        <br />
        <%= link_to "Basic Sign Up", new_user_registration_path(plan: @basic_plan.id), class: "btn btn-default btn-lg btn-block" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Premium Membership</h2>
        <h4>Premium account for all the goods! Just $10/month!</h4>
        <br />
        <%= link_to "Cough Up The Cash", new_user_registration_path(plan: @premium_plan.id), class: "btn btn-success btn-lg btn-block" %>
      </div>
    </div>
  <% end %>
</div>
